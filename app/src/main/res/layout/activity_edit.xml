<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afunx.actiondebugtool.edit.EditActivity">

    <Button
        android:id="@+id/btn_frame_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/sl_frames_play"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="@fraction/robot_parts_exclude"
        />

    <Button
        android:id="@+id/btn_frame_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sl_frame_add"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="@fraction/robot_parts_exclude"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ryc_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn_frame_play"
        android:layout_toStartOf="@+id/btn_frame_add"
        app:layout_heightPercent="@fraction/robot_parts_exclude"
        app:layout_widthPercent="100%"
        />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_robot_parts"
        android:layout_height="0dp"
        android:layout_above="@+id/ryc_frame"
        app:layout_aspectRatio="75%"
        app:layout_heightPercent="@fraction/robot_parts"
        >

        <include layout="@layout/robot_parts"/>

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ryc_frame"
        android:layout_toEndOf="@+id/prl_robot_parts"
        >

        <Space
            android:id="@+id/space_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="@fraction/frame_edit_vertical_margin"
            app:layout_widthPercent="100%"
            />

        <Space
            android:id="@+id/space_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="@fraction/frame_edit_vertical_margin"
            app:layout_widthPercent="100%"
            />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/space_bottom"
            android:layout_below="@+id/space_top"
            >

            <com.afunx.actiondebugtool.widget.SmartSeekBar
                android:id="@+id/smart_seek_bar_deg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="30%"
                app:layout_widthPercent="100%"
                />

            <com.afunx.actiondebugtool.widget.SmartSeekBar
                android:id="@+id/smart_seek_bar_runtime"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_below="@+id/smart_seek_bar_deg"
                app:layout_heightPercent="30%"
                app:layout_widthPercent="100%"
                app:smart_seek_bar_max="5000"
                app:smart_seek_bar_min="100"
                />

            <EditText
                android:id="@+id/edt_frame_rename"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/smart_seek_bar_runtime"
                android:hint="@string/hint_edit_selected_frame_name"
                android:singleLine="true"
                app:alert_title="@string/set_frame_name"
                app:layout_heightPercent="30%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="70%"
                />

            <Button
                android:id="@+id/btn_frame_rename_confirm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/smart_seek_bar_runtime"
                android:text="@android:string/ok"
                app:layout_heightPercent="30%"
                app:layout_marginTopPercent="10%"
                app:layout_widthPercent="30%"
                />
        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>
