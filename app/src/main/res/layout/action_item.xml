<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prl_action_item"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    tools:context="com.afunx.actiondebugtool.MainActivity">
    <!--andoid:layout_height is defined in ActionItemAdapter.java percentHeight-->

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/item_icon"
        app:layout_aspectRatio='100%'
        app:layout_heightPercent='80%'/>

    <Button
        android:id="@+id/btn_action_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/item_delete"
        app:layout_aspectRatio='100%'
        app:layout_heightPercent='80%'/>

    <Button
        android:id="@+id/btn_action_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_toStartOf="@+id/btn_action_delete"
        android:background="@mipmap/item_edit"
        app:layout_aspectRatio='100%'
        app:layout_heightPercent='80%'/>

    <TextView
        android:id="@+id/tv_action_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toEndOf="@+id/image_icon"
        android:layout_toStartOf="@+id/btn_action_edit"
        android:gravity="center"
        android:textSize="@dimen/font_large"
        app:layout_heightPercent='80%'
        app:layout_widthPercent='100%'
        />


</android.support.percent.PercentRelativeLayout>
